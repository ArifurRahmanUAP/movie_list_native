<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nowShowingView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/nowShowingImage"
            android:layout_width="150dp"
            android:layout_height="220dp"
            android:background="@drawable/border_textview"
            android:elevation="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/movie_poster" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/nowShowingTitle"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Avatar : The Way of Water"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star"
            app:tint="@color/deep_yellow" />

        <TextView
            android:id="@+id/nowShowingRatting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9.8/10 IMDb" />

    </LinearLayout>

</LinearLayout>